<view class="index other">
    <view class="audio_wrap">
        <view class="df ai-center jcc  audio">
            <view class="button pause" wx:if="{{isPlaying}}" bind:tap="pause"></view>
            <view class="button play" wx:else bind:tap="play"></view>
            <view class="ml20">{{curTimeVal}}</view>
            <slider show-value activeColor="#3d92e1" 
                    backgroundColor="#bfbfbf" 
                    block-color="#3d92e1" 
                    block-size="12" 
                    style="width: 360rpx;" 
                    bindchange="bindchange"
                    value="{{curValue}}" 
                    max="{{maxValue}}"></slider>
            <view>{{duration}}</view>
        </view>
        <view>{{curValue}}</view>
        <view>{{maxValue}}</view>
    </view>
</view>